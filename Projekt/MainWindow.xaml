            </Button>
        </Grid>
        <Grid x:Name="MojeOgloszenia" Visibility="Hidden">
            <ListView x:Name="ListViewMojeOgloszenia" Margin="50,124,50,69" HorizontalContentAlignment="Center">
                <ListView.View>
                    <GridView>
                        <GridView.Columns>
                            <GridViewColumn Header="Tytuł" DisplayMemberBinding="{Binding Tytul}" Width="100"/>
                            <GridViewColumn Header="Treść" DisplayMemberBinding="{Binding Tresc}" Width="300"/>
                            <GridViewColumn Header="Data utworzenia" DisplayMemberBinding="{Binding Data_utw}" Width="130"/>
                            <GridViewColumn Header="Ostatnia modyfikacja" DisplayMemberBinding="{Binding Data_ed}" Width="130"/>
                        </GridView.Columns>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
        <Grid x:Name="MojeKategorie" Visibility="Hidden">
            <ListView x:Name="ListViewMojeKategorie" Margin="50,124,50,69" HorizontalContentAlignment="Center">
                <ListView.View>
                    <GridView>
                        <GridView.Columns>
                            <GridViewColumn Header="Nazwa" DisplayMemberBinding="{Binding Nazwa}" Width="350"/>
                            <GridViewColumn Header="Data utworzenia" DisplayMemberBinding="{Binding Data_utw}" Width="300"/>
                        </GridView.Columns>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
