            <Button x:Name="PowrotButtonD" Content="Powrót" HorizontalAlignment="Left" Margin="558,350,0,0" VerticalAlignment="Top" Height="41" Width="102" Click="PowrotButtonD_Click"/>
            <Label x:Name="rezultatDodania" Content="Rezultat" HorizontalAlignment="Left" Margin="318,89,0,0" VerticalAlignment="Top" Height="45" Width="342"/>
            <Label Content="Dodaj ogłoszenie" HorizontalAlignment="Left" Margin="51,14,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.342,-0.153" Height="40" Width="153"/>
            <ListBox x:Name="ListBoxKategorie" HorizontalAlignment="Left" Height="87" Margin="132,90,0,0" VerticalAlignment="Top" Width="148" SelectionMode="Multiple">
            </ListBox>
        </Grid>

        <Grid x:Name="edycjaOgloszenia" Visibility="Hidden">
            <TextBox x:Name="Tresc" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" Width="528" Height="162" Margin="0,100,0,0"/>
            <TextBox x:Name="Tytul" HorizontalAlignment="Center" Width="528" Height="30" TextWrapping="Wrap" Text="" Margin="0,0,0,100"/>
            <Label Content="Tytuł" HorizontalAlignment="Left" Margin="51,144,0,0" VerticalAlignment="Top" Height="26" Width="70"/>
            <Label Content="Treść" HorizontalAlignment="Left" Margin="51,178,0,0" VerticalAlignment="Top" Height="28" Width="70"/>
            <Button x:Name="ZatwierdzButton" Content="Zatwierdź" Margin="0,315,425,0" Height="41" Width="102" Click="ZatwierdzButton_Click"/>
