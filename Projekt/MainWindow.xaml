        <Grid x:Name="dodajOgloszenie" Visibility="Hidden">
            <TextBox x:Name="TrescD" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="528" Height="149" Margin="0,182,0,0"/>
            <TextBox x:Name="TytulD" HorizontalAlignment="Left" Margin="132,60,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="148" Height="25"/>
            <Label Content="Tytuł" HorizontalAlignment="Left" Margin="51,60,0,0" VerticalAlignment="Top" Height="25" Width="70"/>
            <Label Content="Treść" HorizontalAlignment="Left" Margin="57,182,0,0" VerticalAlignment="Top" Height="28" Width="70"/>
