<Window x:Class="Projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinWidth="800" MinHeight="450">
    <Grid>
        <TextBlock x:Name="TextBlock1" Visibility="Hidden" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Tu pojawi się wynik zapytania..." VerticalAlignment="Top" Height="197" Width="646"/>
        <Grid x:Name="logowanie" Visibility="Hidden" Margin="0,-10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="234*"/>
                <ColumnDefinition Width="163*"/>
                <ColumnDefinition Width="163*"/>
                <ColumnDefinition Width="233*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="139*"/>
                <RowDefinition Height="48*"/>
                <RowDefinition Height="48*"/>
                <RowDefinition Height="48*"/>
                <RowDefinition Height="137*"/>
            </Grid.RowDefinitions>
            <TextBox x:Name="LoginBox" Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" Text="Login" Margin="40,12,40,12" PreviewMouseDown="LoginBox_PreviewMouseDown" Grid.ColumnSpan="2" TextAlignment="Center" VerticalContentAlignment="Center"/>
            <PasswordBox x:Name="PassBox" Margin="40,12,40,12" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2"/>
            <Button x:Name="LoginButton" Width="150" HorizontalAlignment="Center" Margin="5,5,5,5" Content="Zaloguj się" Grid.Column="1" Grid.Row="3" Click="LoginButton_Click"/>
            <Button x:Name="ZarejestrujSieDoGrida" Width="150" HorizontalAlignment="Center" Margin="5,5,5,5" Content="Zarejestruj się" Grid.Column="2" Grid.Row="3" Click="ZarejestrujSieDoGrida_Click"/>
            <Rectangle Grid.Column="1" Grid.Row="1" Fill="Gray" Panel.ZIndex="-1" Grid.ColumnSpan="2" Grid.RowSpan="3"/>
        </Grid>
        <Grid x:Name="rejestracja" Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250*"/>
                <ColumnDefinition Width="200*"/>
                <ColumnDefinition Width="200*"/>
                <ColumnDefinition Width="250*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="60*"/>
                <RowDefinition Height="60*"/>
                <RowDefinition Height="60*"/>
                <RowDefinition Height="60*"/>
                <RowDefinition Height="60*"/>
                <RowDefinition Height="60*"/>
            </Grid.RowDefinitions>
            <TextBox x:Name="TextBoxImie" PreviewMouseDown="TextBoxImie_PreviewMouseDown" Grid.Column="1" Grid.Row="1" Height="36" TextWrapping="Wrap" Text="Imię" Margin="10,0,10,0" Padding="0,5,0,0" TextAlignment="Center" FontSize="16"/>
            <TextBox x:Name="TextBoxNazwisko" PreviewMouseDown="TextBoxNazwisko_PreviewMouseDown" Grid.Column="2" Grid.Row="1" Height="36" TextWrapping="Wrap" Text="Nazwisko" Margin="10,0,10,0" Padding="0,5,0,0" TextAlignment="Center" FontSize="16"/>
            <TextBox x:Name="TextBoxLogin" PreviewMouseDown="TextBoxLogin_PreviewMouseDown" Grid.Column="1" Grid.Row="2" Height="36" TextWrapping="Wrap" Text="Login" Margin="10,0,10,0" Padding="0,5,0,0" TextAlignment="Center" FontSize="16"/>
            <TextBox x:Name="TextBoxEmail" Grid.Column="3" Grid.Row="1" Height="36" TextWrapping="Wrap" Text="Email" Margin="10,0,10,0" Padding="0,5,0,0" TextAlignment="Center" FontSize="16"/>
            <Label x:Name="LabelPass1" Grid.Column="1" Grid.Row="3" Margin="65,0,65,45" Padding="0,0,0,0" FontSize="16" Content="Hasło" Panel.ZIndex="1" HorizontalContentAlignment="Center"/>
            <Label x:Name="LabelPass2" Grid.Column="2" Grid.Row="3" Height="36" Margin="35,0,35,0" Padding="0,5,0,0" FontSize="16" Content="Powtórz Hasło" Panel.ZIndex="1" HorizontalContentAlignment="Center"/>
            <PasswordBox x:Name="PassBox1" Grid.Column="1" Grid.Row="3" Height="36" Margin="10,20,10,0" Padding="0,5,0,0" FontSize="16"/>
            <PasswordBox x:Name="PassBox2" Grid.Column="2" Grid.Row="3" Height="36" Margin="10,0,10,0" Padding="0,5,0,0" FontSize="16" PasswordChanged="PassBox2_PasswordChanged"/>
            <DatePicker x:Name="DatePicker1" Grid.Column="2" Grid.Row="2" Height="36" Margin="10,0,10,0" Padding="0,5,0,0" FontSize="16"/>
            <Button x:Name="Rejestruj" Grid.Column="1" Grid.Row="4" Height="36" Margin="10,0,10,0" FontSize="16" Content="Zarejestruj" Click="Rejestruj_Click"/>
            <Button x:Name="BackToLogin" Grid.Column="2" Grid.Row="4" Height="36" Margin="10,0,10,0" FontSize="16" Content="Powrot" Click="BackToLogin_Click"/>
            <Rectangle Grid.Column="1" Grid.Row="1" Fill="Gray" Panel.ZIndex="-1" Grid.ColumnSpan="2" Grid.RowSpan="4"/>
            <Label x:Name="LabelPassError" Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="2" Content="Tu pojawia sie bledy dotyczace hasła" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="16" Foreground="Red" Visibility="Hidden"/>
        </Grid>
        <Grid x:Name="program" Visibility="Visible">
            <Button x:Name="LogoutButton" Content="Wyloguj" HorizontalAlignment="Center" Margin="0,355,0,0" VerticalAlignment="Top" Height="30" Width="188" Click="LogoutButton_Click"/>
            <ListBox x:Name="ListBox1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="92,118,92,84" SelectionChanged="ListBox1_SelectionChanged"/>
            <Label Content="Wyświetlono ? ogłoszeń" HorizontalAlignment="Left" Margin="92,75,0,0" VerticalAlignment="Top" Height="28" Width="154"/>
            <Button x:Name="dodajOgoszenieButton" Content="Dodaj ogłoszenie" HorizontalAlignment="Left" Margin="591,69,0,0" VerticalAlignment="Top" Height="37" Width="117" Click="dodajOgoszenieButton_Click"/>
            <Label Content="Witaj nazwa!" HorizontalAlignment="Left" Margin="92,24,0,0" VerticalAlignment="Top" Height="36" Width="183"/>
        </Grid>

        <Grid x:Name="dodajOgloszenie" Visibility="Hidden">
            <TextBox x:Name="TrescD" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="528" Height="149" Margin="0,182,0,0"/>
            <TextBox x:Name="TytulD" HorizontalAlignment="Left" Margin="136,99,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="148" Height="25"/>
            <TextBox x:Name="KategoriaD" HorizontalAlignment="Left" Margin="137,139,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="148" Height="25"/>
            <Label Content="Tytuł" HorizontalAlignment="Left" Margin="51,99,0,0" VerticalAlignment="Top" Height="25" Width="70"/>
            <Label Content="Kategoria" HorizontalAlignment="Left" Margin="51,139,0,0" VerticalAlignment="Top" Height="25" Width="70"/>
            <Label Content="Treść" HorizontalAlignment="Left" Margin="51,199,0,0" VerticalAlignment="Top" Height="28" Width="70"/>
            <Button x:Name="ZatwierdzButtonD" Content="Zatwierdź" HorizontalAlignment="Left" Margin="137,350,0,0" VerticalAlignment="Top" Height="41" Width="102" Click="ZatwierdzButtonD_Click"/>
            <Button x:Name="PowrotButtonD" Content="Powrót" HorizontalAlignment="Left" Margin="562,350,0,0" VerticalAlignment="Top" Height="41" Width="102" Click="PowrotButtonD_Click"/>
            <Label x:Name="rezultatDodania" Content="Rezultat" HorizontalAlignment="Left" Margin="400,32,0,0" VerticalAlignment="Top" Height="45" Width="203"/>
            <Label Content="Dodaj ogłoszenie" HorizontalAlignment="Left" Margin="51,32,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.342,-0.153" Height="40" Width="153"/>
        </Grid>

        <Grid x:Name="edycjaOgloszenia" Visibility="Hidden">
            <TextBox x:Name="Tresc" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="528" Height="149" Margin="0,183,0,0"/>
            <TextBox x:Name="Tytul" HorizontalAlignment="Left" Margin="136,94,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="148" Height="26"/>
            <TextBox x:Name="Kategoria" HorizontalAlignment="Left" Margin="136,143,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="148" Height="25"/>
            <Label Content="Tytuł" HorizontalAlignment="Left" Margin="51,94,0,0" VerticalAlignment="Top" Height="25" Width="70"/>
            <Label Content="Kategoria" HorizontalAlignment="Left" Margin="51,143,0,0" VerticalAlignment="Top" Height="25" Width="70"/>
            <Label Content="Treść" HorizontalAlignment="Left" Margin="51,199,0,0" VerticalAlignment="Top" Height="28" Width="70"/>
            <Button x:Name="ZatwierdzButton" Content="Zatwierdź" HorizontalAlignment="Left" Margin="137,350,0,0" VerticalAlignment="Top" Height="41" Width="102" Click="ZatwierdzButton_Click"/>
            <Button x:Name="UsunButton" Content="Usuń" HorizontalAlignment="Left" Margin="298,350,0,0" VerticalAlignment="Top" Height="41" Width="102"/>
            <Button x:Name="PowrotButton" Content="Powrót" HorizontalAlignment="Left" Margin="562,350,0,0" VerticalAlignment="Top" Height="41" Width="102" Click="PowrotButton_Click"/>
            <Label x:Name="rezultatEdycji" Content="Rezultat" HorizontalAlignment="Left" Margin="367,76,0,0" VerticalAlignment="Top" Height="45" Width="203"/>
            <Label Content="Edytuj ogłoszenie" HorizontalAlignment="Left" Margin="51,25,0,0" VerticalAlignment="Top" Height="41" Width="144"/>
        </Grid>
    </Grid>
</Window>
