            <Label x:Name="rezultatDodania_kat" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="216" Margin="388,94,0,0" Visibility="Hidden"/>
            <TextBox x:Name="FilterTextBoxK" Text="" Margin="381,24,221,0" VerticalAlignment="Top" Height="30" VerticalContentAlignment="Center" TextChanged="FilterTextBoxK_TextChanged"/>
            <Label x:Name="LabelDodajKat_Copy" Content="Szukaj" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="190" Margin="183,24,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Right"/>
            <Button x:Name="PokazPanelAdmina" Content="Pokaz panel administracyjny" HorizontalAlignment="Center" Margin="0,370,450,0" VerticalAlignment="Top" Click="PokazPanelAdmina_Click" Height="30" Width="164"/>
