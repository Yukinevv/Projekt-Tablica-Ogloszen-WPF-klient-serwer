            <Label Content="Nowe hasło" HorizontalAlignment="Right" Margin="0,0,89,0" Grid.Row="3"/>
            <PasswordBox x:Name="NoweHaslo" Width="140" Height="25" HorizontalAlignment="Right" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Row="3" Margin="0,16,23,16" VerticalAlignment="Bottom"/>
            <Label Content="Powtórz hasło" HorizontalAlignment="Left" Margin="25,0,0,0" Grid.Column="1" Grid.Row="3"/>
            <PasswordBox x:Name="PowtorzNoweHaslo" Width="140" Height="25" HorizontalAlignment="Left" Grid.Column="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Row="3" Margin="23,16,0,16" VerticalAlignment="Bottom"/>
            <Button x:Name="ZmienHaslo" Grid.Column="1" Grid.Row="4" Width="140" Content="Zmień hasło" HorizontalAlignment="Left" Margin="23,6,0,6" Click="ZmienHaslo_Click"/>
            <Button x:Name="MojeOgloszeniaButton" Grid.Column="0" Grid.Row="4" Width="140" Height="25" Content="Moje ogłoszenia" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,6,23,0" Click="MojeOgloszeniaButton_Click"/>
