        </Grid>

        <Grid x:Name="program" Visibility="Hidden">
            <Button x:Name="LogoutButton" Content="Wyloguj" HorizontalAlignment="Center" Margin="0,370,0,0" VerticalAlignment="Top" Height="30" Width="188" Click="LogoutButton_Click"/>
            <ListView x:Name="ListView1" Margin="100,124,100,69" MouseDoubleClick="ListView1_MouseDoubleClick" HorizontalContentAlignment="Center">
                <ListView.View>
                    <GridView>
                        <GridView.Columns>
                            <GridViewColumn Header="Tytuł" DisplayMemberBinding="{Binding Tytul}" Width="130"/>
                            <GridViewColumn Header="Data utworzenia" DisplayMemberBinding="{Binding Data_utw}" Width="90"/>
                            <GridViewColumn Header="Data edycji" DisplayMemberBinding="{Binding Data_ed}" Width="90"/>
                            <GridViewColumn Header="Treść" DisplayMemberBinding="{Binding Tresc}" Width="264"/>
                        </GridView.Columns>
                    </GridView>
                </ListView.View>
            </ListView>
            <Label x:Name="IloscOgloszenLabel" Content="Wyświetlono ? ogłoszeń" HorizontalAlignment="Left" Margin="41,73,0,0" VerticalAlignment="Top" Height="28" Width="183"/>
            <Button x:Name="DodajOgloszenieButton" Content="Dodaj ogłoszenie" HorizontalAlignment="Left" Margin="591,69,0,0" VerticalAlignment="Top" Height="34" Width="117" Click="DodajOgloszenieButton_Click"/>
            <Label x:Name="WitajLabel" Content="Witaj nazwa!" HorizontalAlignment="Left" Margin="41,24,0,0" VerticalAlignment="Top" Height="36" Width="183"/>
            <ComboBox x:Name="ComboBox1" SelectedIndex="0" Text="Jak sortować" HorizontalAlignment="Left" Margin="429,70,0,0" VerticalAlignment="Top" Width="131" Height="34" FontSize="16" IsEditable="False" SelectionChanged="ComboBox1_SelectionChanged" IsReadOnly="True"/>
            <ComboBox x:Name="ComboBox2" SelectedIndex="0" Text="Sortuj według" HorizontalAlignment="Left" Margin="275,71,0,0" VerticalAlignment="Top" Width="131" Height="33" FontSize="16" IsEditable="False" IsReadOnly="True"/>
            <Button x:Name="OdswiezButton" Content="Odśwież" HorizontalAlignment="Left" Margin="591,370,0,0" VerticalAlignment="Top" Height="30" Width="117" Click="OdswiezButton_Click"/>
            <TextBox x:Name="FilterTextBox" TextChanged="FilterTextBox_TextChanged" HorizontalAlignment="Left" Margin="429,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="131" Height="28"/>
            <Label Content="Szukaj:" HorizontalAlignment="Center" Margin="0,29,0,0" VerticalAlignment="Top" RenderTransformOrigin="0,0.348" Width="60"/>
            <Button x:Name="Wroc" Content="Wróć" HorizontalAlignment="Left" Margin="83,370,0,0" VerticalAlignment="Top" Height="30" Width="117" Click="Wroc_Click"/>
        </Grid>

        <Grid x:Name="program_kategorie" Visibility="Hidden">
            <Button x:Name="LogoutButton_kat" Content="Wyloguj" HorizontalAlignment="Center" Margin="0,370,0,0" VerticalAlignment="Top" Height="30" Width="188" Click="LogoutButton_Click"/>
            <ListView x:Name="ListView2" Margin="100,124,100,69" MouseDoubleClick="ListView2_MouseDoubleClick" HorizontalContentAlignment="Center">
                <ListView.View>
                    <GridView>
                        <GridView.Columns>
                            <GridViewColumn Header="Nazwa" DisplayMemberBinding="{Binding Nazwa}" Width="120"/>
                            <GridViewColumn Header="Data utworzenia" DisplayMemberBinding="{Binding Data_utw}" Width="90"/>
                        </GridView.Columns>
                    </GridView>
                </ListView.View>
            </ListView>
            <Label x:Name="WitajLabel_kat" Content="Witaj nazwa!" HorizontalAlignment="Left" Margin="41,24,0,0" VerticalAlignment="Top" Height="36" Width="183"/>
            <Button x:Name="OdswiezButton_kat" Content="Odśwież" HorizontalAlignment="Left" Margin="591,370,0,0" VerticalAlignment="Top" Height="30" Width="117" Click="OdswiezButton_kat_Click"/>
            <Button x:Name="DodajKategorie" Content="Dodaj kategorie" HorizontalAlignment="Left" Margin="591,64,0,0" VerticalAlignment="Top" Height="30" Width="117" Click="DodajKategorie_Click"/>
            <TextBox x:Name="TextBox_NazwaNowejKategorii" Text="" Margin="381,65,221,0" VerticalAlignment="Top" Height="30" VerticalContentAlignment="Center"/>
