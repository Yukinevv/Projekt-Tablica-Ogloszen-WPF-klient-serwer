            <TextBox x:Name="TextBoxEmail" HorizontalAlignment="Left" Margin="417,127,0,0" TextWrapping="Wrap" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="153" Height="36" FontSize="16"/>
            <PasswordBox x:Name="PassBox1" HorizontalAlignment="Left" Margin="216,211,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="153" Height="36" FontSize="16"/>
