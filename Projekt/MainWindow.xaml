            <Button x:Name="PowrotButton" Content="Powrót" Height="40" Width="100" Click="PowrotButton_Click" Margin="425,315,0,0"/>
            <Label x:Name="rezultatEdycji" Content="Rezultat" HorizontalAlignment="Left" Margin="389,28,0,0" VerticalAlignment="Top" Height="45" Width="203"/>
            <Label Content="Edytuj ogłoszenie" HorizontalAlignment="Left" Margin="51,25,0,0" VerticalAlignment="Top" Height="41" Width="144"/>
        </Grid>
        <Grid x:Name="MojProfil" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="69*"/>
                <RowDefinition Height="69*"/>
                <RowDefinition Height="69*"/>
                <RowDefinition Height="69*"/>
                <RowDefinition Height="72*"/>
                <RowDefinition Height="73*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Content="Login" HorizontalAlignment="Right" Margin="0,0,123,0"/>
            <TextBox x:Name="LoginText" Width="140" Height="25" HorizontalAlignment="Right" Text="Login" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="0,16,23,16" VerticalAlignment="Bottom"/>
            <Label Content="Mail" HorizontalAlignment="Left" Margin="25,0,0,0" Grid.Column="1"/>
            <TextBox x:Name="MailText" Width="140" Height="25" HorizontalAlignment="Left" Text="Mail" Grid.Column="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="23,16,0,16" VerticalAlignment="Bottom"/>
            <Label Content="Imię" HorizontalAlignment="Right" Margin="0,0,129,0" Grid.Row="1"/>
            <TextBox x:Name="ImieText" Width="140" Height="25" HorizontalAlignment="Right" Text="Imie" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Row="1" Margin="0,16,23,16" VerticalAlignment="Bottom"/>
            <Label Content="Nazwisko" HorizontalAlignment="Left" Margin="25,0,0,0" Grid.Column="1" Grid.Row="1"/>
            <TextBox x:Name="NazwiskoText" Width="140" Height="25" HorizontalAlignment="Left" Text="Nazwisko" Grid.Column="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Row="1" Margin="23,0,0,16" VerticalAlignment="Bottom"/>
            <Label Content="Data urodzenia" HorizontalAlignment="Right" Margin="0,0,71,0" Grid.Row="2"/>
            <TextBox x:Name="DataText" Width="140" Height="25" HorizontalAlignment="Right" Text="Data" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Row="2" Margin="0,16,23,16" VerticalAlignment="Bottom"/>
