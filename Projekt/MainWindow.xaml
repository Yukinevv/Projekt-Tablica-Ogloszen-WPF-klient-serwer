<Window x:Class="Projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinWidth="800" MinHeight="450">
    <Grid>
        <TextBlock x:Name="TextBlock1" HorizontalAlignment="Left" Margin="160,47,0,0" TextWrapping="Wrap" Text="Tu pojawi się wynik zapytania..." VerticalAlignment="Top" Height="300" Width="463" Visibility="Visible" TextAlignment="Center" FontSize="22"/>
        <Button x:Name="LogoutButton" Content="Wyloguj" Margin="250,130,250,250" Visibility="Hidden" Click="LogoutButton_Click"/>
        <Grid x:Name="logowanie" Visibility="Visible" Margin="0,-10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="234*"/>
                <ColumnDefinition Width="163*"/>
                <ColumnDefinition Width="163*"/>
                <ColumnDefinition Width="233*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="139*"/>
                <RowDefinition Height="48*"/>
                <RowDefinition Height="48*"/>
                <RowDefinition Height="48*"/>
                <RowDefinition Height="137*"/>
            </Grid.RowDefinitions>
            <TextBox x:Name="LoginBox" Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" Text="Login" Margin="40,12,40,12" PreviewMouseDown="LoginBox_PreviewMouseDown" Grid.ColumnSpan="2" TextAlignment="Center" VerticalContentAlignment="Center"/>
            <PasswordBox x:Name="PassBox" Margin="40,12,40,12" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2"/>
            <Button x:Name="LoginButton" Width="150" HorizontalAlignment="Center" Margin="5,5,5,5" Content="Zaloguj się" Grid.Column="1" Grid.Row="3" Click="LoginButton_Click"/>
            <Button x:Name="ZarejestrujSieDoGrida" Width="150" HorizontalAlignment="Center" Margin="5,5,5,5" Content="Zarejestruj się" Grid.Column="2" Grid.Row="3" Click="ZarejestrujSieDoGrida_Click"/>
            <Rectangle Grid.Column="1" Grid.Row="1" Fill="Gray" Panel.ZIndex="-1" Grid.ColumnSpan="2" Grid.RowSpan="3"/>
        </Grid>
        <Grid x:Name="rejestracja" Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="256*"/>
                <ColumnDefinition Width="140*"/>
                <ColumnDefinition Width="137*"/>
                <ColumnDefinition Width="259*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="45*"/>
                <RowDefinition Height="47*"/>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="52*"/>
                <RowDefinition Height="43*"/>
                <RowDefinition Height="147*"/>
                <RowDefinition Height="45*"/>
            </Grid.RowDefinitions>
            <TextBox HorizontalAlignment="Right" Height="22" TextWrapping="Wrap" Text="Imię" VerticalAlignment="Center" Width="120" Grid.Row="1" Grid.Column="1" Margin="0,13,10,12" HorizontalContentAlignment="Center"/>
            <TextBox HorizontalAlignment="Left" Height="22" TextWrapping="Wrap" Text="Nazwisko" VerticalAlignment="Center" Width="120" Grid.Row="1" Grid.Column="2" Margin="10,13,0,12" HorizontalContentAlignment="Center"/>
            <TextBox HorizontalAlignment="Right" Height="22" TextWrapping="Wrap" Text="Login" VerticalAlignment="Center" Width="120" Grid.Row="2" Grid.Column="1" Margin="0,9,10,9" HorizontalContentAlignment="Center"/>
            <PasswordBox HorizontalAlignment="Right" Height="22" VerticalAlignment="Center" Width="120" Grid.Row="3" Grid.Column="1" Margin="0,15,10,15"/>
            <PasswordBox HorizontalAlignment="Left" Height="22" VerticalAlignment="Center" Width="120" Grid.Row="3" Grid.Column="2" Margin="10,15,0,15"/>
            <DatePicker HorizontalAlignment="Left" VerticalAlignment="Top" Height="24" Width="120" Grid.Column="2" Grid.Row="2" Margin="10,10,0,0"/>
            <Button x:Name="Rejestruj" Grid.Column="1" Grid.Row="4" Width="120" Height="22" Content="Zarejestruj się" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,10,10,0"/>
            <Button x:Name="BackToLogin" Grid.Column="2" Grid.Row="4" Width="120" Height="22" Content="Powrót do logowania" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0" Click="BackToLogin_Click"/>
            <Rectangle Grid.Column="1" Grid.Row="1" Fill="Gray" Panel.ZIndex="-1" Grid.ColumnSpan="2" Grid.RowSpan="4"/>
        </Grid>
        <Grid x:Name="program" Visibility="Hidden">
        </Grid>
    </Grid>
</Window>
