<Page x:Class="Klient.Logowanie"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Klient"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Logowanie">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="397*"/>
            <ColumnDefinition Width="403*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="73*"/>
            <RowDefinition Height="77*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="TextBoxInformacyjny" HorizontalAlignment="Left" Margin="40,21,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="222" Height="59"/>
        <TextBox x:Name="TextBoxLogin" Text="jank" HorizontalAlignment="Left" Margin="189,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148" Height="34" RenderTransformOrigin="0.128,0.479"/>
        <TextBox x:Name="TextBoxHaslo" Text="qwerty123" HorizontalAlignment="Left" Margin="53,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148" Height="34" RenderTransformOrigin="0.128,0.479" Grid.Column="1"/>
        <Button x:Name="LogowanieButton" Content="Zaloguj sie" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Center" Height="47" Width="151" Margin="189,0,0,0" Click="LogowanieButton_Click"/>
        <Button x:Name="RejestracjaButton" Content="Zarejestruj sie" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Center" Height="47" Width="151" Grid.Column="1" Click="RejestracjaButton_Click" Margin="53,0,0,0"/>
        <Label Content="Login" HorizontalAlignment="Left" Margin="189,0,0,0" VerticalAlignment="Center" Width="148"/>
        <Label Content="Hasło" HorizontalAlignment="Left" Margin="53,0,0,0" VerticalAlignment="Center" Width="148" Grid.Column="1"/>
    </Grid>
</Page>
