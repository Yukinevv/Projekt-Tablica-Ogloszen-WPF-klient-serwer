<Page x:Class="Klient.Logowanie"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Klient"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Logowanie">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="397*"/>
            <ColumnDefinition Width="403*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="73*"/>
            <RowDefinition Height="77*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="TextBoxLogin" Text="jank2" HorizontalAlignment="Left" Margin="326,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148" Height="34" Grid.ColumnSpan="2"/>
        <PasswordBox x:Name="PassBoxHaslo" Password="qwerty123" HorizontalAlignment="Left" Margin="326,208,0,0" VerticalAlignment="Top" Width="148" Height="34" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <Button x:Name="LogowanieButton" Content="Zaloguj sie" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Center" Height="47" Width="151" Margin="189,0,0,0" Click="LogowanieButton_Click"/>
        <Button x:Name="RejestracjaButton" Content="Zarejestruj sie" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Center" Height="47" Width="151" Grid.Column="1" Click="RejestracjaButton_Click" Margin="53,0,0,0"/>
        <Label Content="Login" HorizontalAlignment="Left" Margin="326,66,0,0" VerticalAlignment="Top" Width="148" Grid.ColumnSpan="2"/>
        <Label Content="Hasło" HorizontalAlignment="Left" Margin="326,170,0,0" VerticalAlignment="Top" Width="148" Grid.ColumnSpan="2"/>
    </Grid>
</Page>
